---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import LinkedInIcon from '../icons/LinkedIn.astro';
import GithubIcon from '../icons/Github.astro';
import MailIcon from '../icons/Mail.astro';
import SocialPill from '../icons/SocialPill.astro';
import SectionContainer from '../components/SectionContainer.astro';
import AcademyIcon from '../icons/Academy.astro';
import ProjectIcon from '../icons/Project.astro';
import Projects from '../components/Projects.astro';
import BioIcon from '../icons/Bio.astro';
import PersonalContainer from '../components/PersonalContainer.astro';
import Footer from '../components/Footer.astro';
import Experience from '../components/Experience.astro';
---

<Layout title="Portfolio de JuampDev - Desarrollador y Programador Web"
		description="Contrata a JuampDev para crear tu aplicación web o móvil. Desarrollador Web. Especializado en crear aplicaciones únicas.">
	<main>
		<SectionContainer class="py-6 pb-6">
			
			<div class="flex gap-x-4 mb-4">
				<img class="rounded-full shadow-lg size-16" src="/public/1609249838700.jpeg" alt="juanmpv photo">
				<Badge></Badge>
			</div>

			<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10" > 
				Hey, soy JuanmDev<a 
				href="https://www.linkedin.com/in/juan-manuel-pern%C3%ADa-/"
				target="_blank"
				rel="noopener"
				class="flex justify-center items-center"></a>
			</h1>
			<p class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300">
				+1 años de experiencia.<strong> Técnico de sistemas y desarrollador Web </strong> de Madrid, España. Especializado en crear aplicaciones únicas.
			</p>
			<nav class="flex gap-x-4 mt-8">
				<SocialPill href="https://www.linkedin.com/in/juan-manuel">
					<LinkedInIcon class="size-6"/>	
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/JuanmpDev">
					<GithubIcon class="size-6"/>	
					Github
				</SocialPill>
				<SocialPill href="mailto:juanmanuel_perniavalencia@outlook.es">
					<MailIcon class="size-6"/>	
					Contáctame
				</SocialPill>
			</nav>		
		</SectionContainer>

		<SectionContainer class="pt-10" id="experiencia">
			<h2 class="text-2xl font-semibold mb-5 flex gap-x-2 justify-start">
				<AcademyIcon class="size-8"/>
				Experiencia laboral
			</h2>
			<Experience/>
		</SectionContainer>

		<SectionContainer class="pt-10" id="proyectos">
			<h2 class="text-2xl font-semibold mb-5 flex gap-x-2 justify-start">
				<ProjectIcon class="size-8"/>
				Proyectos
			</h2>
			<Projects/>
		</SectionContainer>

		<SectionContainer class="pt-10" id="sobre-mi">
			<h2 class="text-2xl font-semibold mb-5 flex gap-x-2 justify-start">
				<BioIcon class="size-8"/>
				Sobre mí
			</h2>
			<PersonalContainer/>
		</SectionContainer>
		
		<Footer />
	</main>
</Layout> 